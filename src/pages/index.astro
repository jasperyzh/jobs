<style>
  @font-face {
    font-family: "Anton";
    src: url("/goodday/fonts/Anton-Regular.ttf") format("truetype");
  }

  @font-face {
    font-family: "CS Regular";
    src: url("/goodday/fonts/cs_regular.ttf") format("truetype");
  }

  @font-face {
    font-family: "Source Sans Variable";
    src: url("/goodday/fonts/SourceSansVariable-Roman.otf") format("opentype");
  }

  :root {
    --yellow: #fac100;
    --lightgray: #d4d4d4;
    --brown: #4f2d21;
    --orange: #fc9300;
    --lightorange: #ff8b26;
    --lightblue: #57addc;
  }

  h1,
  h2,
  h3,
  .h1,
  .h2,
  .h3 {
    font-family: "Anton", sans-serif;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .font__cs {
    font-family: "CS Regular", sans-serif;
  }
  main > section {
    background: var(--yellow);
  }
  .hero--aspect {
    background: rgba(255, 0, 0, 0.5);
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;

    @media screen and (min-width: 425px) {
      aspect-ratio: 4/3;
    }

    @media screen and (min-width: 992px) {
      aspect-ratio: 16/9;
    }
  }

  .container--shadow {
    filter: drop-shadow(1rem 1rem 1rem rgba(0, 0, 0, 0.2));
  }

  .row__findoutmore {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }

  .section__bg {
    background: #f9c000;
  }

  .bg__lightgray {
    background: var(--lightgray);
  }

  .card__whiteblue {
    /* background: linear-gradient(143deg, #f99c02 0%, var(--yellow) 100%); */
    background: white;
    border: 5px solid var(--lightblue);
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    margin-bottom: 1rem;

    & h5.card-title {
      padding: 1rem 0;
      font-family: "CS Regular", sans-serif;
      font-size: 1.5rem;
      text-transform: uppercase;
    }
  }

  @media screen and (min-width: 768px) {
    .card__whiteblue {
      height: 100%;
    }
  }

  .accordion {
    --bs-accordion-color: var(--bs-body-color);
    --bs-accordion-bg: var(--bs-light);

    --bs-accordion-border-color: var(--brown);
    --bs-accordion-btn-color: var(--brown);
    --bs-accordion-btn-bg: var(--lightorange);
    --bs-accordion-btn-icon: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23212529'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
    --bs-accordion-btn-icon-width: 1.25rem;
    --bs-accordion-btn-icon-transform: rotate(-180deg);
    --bs-accordion-btn-icon-transition: transform 0.2s ease-in-out;
    --bs-accordion-btn-active-icon: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23052c65'%3e%3cpath fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z'/%3e%3c/svg%3e");
    --bs-accordion-btn-focus-border-color: #86b7fe;
    --bs-accordion-btn-focus-box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    --bs-accordion-body-padding-x: 1.25rem;
    --bs-accordion-body-padding-y: 1rem;
    --bs-accordion-active-color: var(--bs-light);
    --bs-accordion-active-bg: var(--orange);

    --bs-accordion-bg: transparent;
    --bs-accordion-btn-bg: transparent;
    --bs-accordion-active-bg: transparent;
    --bs-accordion-active-color: brown;

    & .accordion-body {
      background-color: var(--lightgray);
    }
  }
  .form-decor {
    position: relative;
  }
  .form-title {
    position: relative;
    z-index: 2;
  }
  .form-charge {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    opacity: 20%;
    z-index: 1;
  }
</style>

<style>
  /* dzul's */
  .nav-link {
    font-family: "CS Regular", sans-serif;
    font-size: 20px;
    color: var(--lightgray);
  }

  .font__ssv {
    font-family: "Source Sans Variable", sans-serif;
  }

  .card-text {
    font-family: "Source Sans Variable", sans-serif;
    font-weight: 600;
  }
  .card-footer {
    background: transparent;
    border: 0;
  }

  .journey {
    background-image: url("/goodday/signup-bg-charge.svg");
    background-size: cover;
    background-position: top;
    background-repeat: no-repeat;
  }

  @media screen and (max-width: 1023px) {
    .nav-item {
      display: none;
    }
  }

  @media screen and (max-width: 768px) {
    a[href="#register"] {
      width: 40%;
    }

    p.h5 {
      font-size: 1rem;
    }
  }

  .h2__title {
    font-family: "Anton", sans-serif;
    text-transform: uppercase;
    color: var(--brown);
    text-align: center;
    font-size: 3.5rem;
    text-wrap: balance;
    text-shadow: -4px -4px 0 var(--orange);
  }

  @media (min-width: 1400px) {
    .container,
    .container-lg,
    .container-md,
    .container-sm,
    .container-xl,
    .container-xxl {
      max-width: 1240px;
    }
  }
</style>
