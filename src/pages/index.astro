                <path d="M12 21l-12-18h24z"></path>
                <animateTransform
                  attributeName="transform"
                  type="translate"
                  values="0,0; 0,-5; 0,0"
                  dur="1s"
                  repeatCount="indefinite"></animateTransform>
              </svg>
              <p class="text-center">Find Out More</p>
            </div>
          </section> -->

          <!-- <img src="/goodday-esport/section2.jpg" alt="test" /> -->
          <!-- <img src="/goodday-esport/section3.jpg" alt="test" /> -->

          <section id="about" class="section__bg">
            <div class="container col-xxl-auto px-4 py-5">
              <div class="row flex-md-row-reverse align-items-center g-5 py-5">
                <div class="col-12 col-md-4">
                  <img
                    class="d-block mx-auto"
                    src="/goodday-esport/section3-gotmilk.jpg"
                    alt=""
                  />
                </div>
                <div class="col-12 col-md-8">
                  <img src="/goodday-esport/section3-title.jpg" alt="" />
                  <pre>3 columns here</pre>
                  <p class="lead my-4 fs-3">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit.
                    Neque animi ut ab fugiat. Lorem ipsum dolor sit amet
                    consectetur adipisicing elit. Neque animi ut ab fugiat.
                    <img
                      src="/goodday-esport/section3-cs_logo.jpg"
                      class="d-inline-block"
                    />
                    <!-- <Placeholder class="d-inline-block" width="160" height="42" /> -->
                  </p>
                </div>
              </div>
            </div>
          </section>

          <img src="/goodday-esport/section4.jpg" alt="test" />

          <section id="benefit">
            <!-- Desktop Images -->
            <img
              id="desktop-image"
              src="/goodday-esport/section5.jpg"
              alt="Benefits of Esports"
              class="d-none d-md-block img-fluid"
              style="cursor: pointer"
            />
            <!-- Mobile Images -->
            <img
              id="mobile-image"
              src="/goodday-esport/section5.jpg"
              alt="Benefits of Esports"
              class="d-md-none img-fluid"
              style="cursor: pointer"
            />
          </section>

          <section id="journey">
            <img src="/goodday-esport/section6.jpg" alt="test" />

            <!-- 3 columns -->
          </section>

          <!-- <img src="/goodday-esport/section7.jpg" alt="test" /> -->
          <section id="register" class="section__bg py-4">
            <div class="container">
              <div class="row g-5 align-items-center">
                <div class="col-md-4">
                  <img src="/goodday-esport/section7-history.jpg" alt="test" />
                </div>

                <div class="col-md-8 col-lg-8">
                  <GooddayForm />
                </div>
              </div>
            </div>
          </section>

          <section id="faq" class="section__bg">
            <div class="container">
              <div class="py-5 text-center">
                <h2>FAQ</h2>
                <p class="lead">
                  Lorem ipsum dolor sit amet consectetur adipisicing elit.
                  Officiis repudiandae ad dignissimos quo.
                </p>
              </div>
              <div class="row justify-content-center">
                <div class="col-lg-8">
                  <GooddayFaq className="mb-4" />
                </div>
              </div>
            </div>
          </section>
        </div>
      </div>
    </section>

    <footer class="text-white py-4 text-center" style="background: #353535">
      <div class="container">
        <!-- tnc -->
        <p>
          <a href="#" class="text-white">Terms and Conditions</a>
        </p>
        <p>&copy; Goodday Esport Campaign</p>
      </div>
    </footer>
  </main>

  <script>
    // toggle images for section 5
    const benefit_desktop = document.getElementById("desktop-image");
    const benefit_mobile = document.getElementById("mobile-image");

    if (benefit_desktop) {
      benefit_desktop.addEventListener("click", function () {
        this.src = this.src.includes("/goodday-esport/section5.jpg")
          ? "/goodday-esport/section5-toggle.jpg"
          : "/goodday-esport/section5.jpg";
      });
    }

    if (benefit_mobile) {
      benefit_mobile.addEventListener("click", function () {
        this.src = this.src.includes("/goodday-esport/section5.jpg")
          ? "/goodday-esport/section5-toggle.jpg"
          : "/goodday-esport/section5.jpg";
      });
    }
  </script>

