      --yellow: #fac100;
      --lightgray: #d5d5d5;
      --brown: #4f2d21;
      --orange: #ff5716;
      --lightorange: #ff8b26;
    }

    img {
      max-width: 100%;
      height: auto;
    }

    main > section {
      background: var(--yellow);
    }
    .hero--aspect {
      background: rgba(255, 0, 0, 0.5);
      aspect-ratio: 1/1;
      display: flex;
      align-items: center;

      @media screen and (min-width: 425px) {
        aspect-ratio: 4/3;
      }

      @media screen and (min-width: 992px) {
        aspect-ratio: 16/9;
      }
    }

    .container--shadow {
      filter: drop-shadow(1rem 1rem 1rem rgba(0, 0, 0, 0.2));
    }

    .row__findoutmore {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      margin: auto;
    }

    .section__bg {
      background: linear-gradient(143deg, #f99c02 0%, var(--yellow) 100%);
    }

