---
import Layout from "../layouts/Layout.astro";
import GooddayForm from "./_goodday-form.astro";
import GooddayFaq from "./_goodday-faq.astro";
---

<Layout title="Goodday Charge - Boomers2Gamers">
  <!-- slot add favicon -->
  <link rel="icon" type="image/png" href="/goodday/favicon.jpeg" />

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
    crossorigin="anonymous"
  />

  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
  />

  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>

  <header class="bg-black text-white">
    <div class="container">
      <header class="d-flex flex-wrap py-2">
        <a
          href="/"
          class="d-flex align-items-center link-body-emphasis text-decoration-none"
        >
          <img
            src="/goodday/logo.svg"
            alt="goodday logo"
            style="height: 50px;"
          />
        </a>

        <ul class="nav nav-pills ms-4 me-auto align-items-center">
          <li class="nav-item">
            <a href="#opportunity" class="nav-link">About</a>
          </li>
          <li class="nav-item">
            <a href="#benefit" class="nav-link">Benefits of ESports</a>
          </li>
          <li class="nav-item">
            <a href="#journey" class="nav-link">Journey</a>
          </li>
        </ul>

        <a href="#register">
          <img
            src="/goodday/btn-register.svg"
            alt="goodday esport button to register section"
            style="height: 50px;"
          />
        </a>
      </header>
    </div>
  </header>

  <main style="background-color: var(--yellow)">
    <section id="masthead">
      <div class="container container--shadow px-0">
        <div
          id="carouselExampleIndicators"
          class="carousel slide"
          data-bs-ride="carousel"
        >
          <div class="carousel-indicators">
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="0"
              class="active"
              aria-current="true"
              aria-label="Slide 1"></button>
            <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="1"
              aria-label="Slide 2"></button>
            <!-- <button
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide-to="2"
              aria-label="Slide 3"></button> -->
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                src="/goodday/240216-landing3-b.jpg"
                class="d-block w-100"
                alt="Landing 1"
              />
            </div>
            <div class="carousel-item">
              <img
                src="/goodday/landing2-80.jpg"
                class="d-block w-100"
                alt="Landing 2"
              />
            </div>
          </div>
          <button
            class="carousel-control-prev"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button
            class="carousel-control-next"
            type="button"
            data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </section>
    <style>
      #carouselExampleIndicators {
        background-color: var(--yellow);
      }
      #carouselExampleIndicators,
      .carousel-inner,
      .carousel-item,
      .carousel-item img {
        max-height: 90 ruvh; /* Adjust this value as needed */
        width: 100%; /* Ensure width is set to 100% */
        object-fit: contain; /* This ensures images cover the area well without stretching */
      }
    </style>
    <section id="opportunity">
      <div class="container container--shadow">
        <div class="row">
          <div class="col gx-0">
            <!-- Desktop Images -->
            <img
              src="/goodday/240216-opportunity.jpg"
              alt="Opportunity"
              class="d-none d-md-block img-fluid"
            />
            <!-- Mobile Images -->
            <img
              src="/goodday/opportunity-mobile.jpg"
              alt="Opportunity"
              class="d-md-none img-fluid"
            />
          </div>
        </div>
      </div>
    </section>

    <section id="lookingfor">
      <div class="container container--shadow">
        <div class="row">
          <div class="col gx-0">
            <!-- Desktop Images -->
            <img
              src="/goodday/lookingfor-80.jpg"
              alt="Looking For"
              class="d-none d-md-block img-fluid"
            />
            <!-- Mobile Images -->
            <img
              src="/goodday/lookingfor-mobile.jpg"
              alt="Looking For"
              class="d-md-none img-fluid"
            />
          </div>
        </div>
      </div>
    </section>

    <section id="benefit">
      <div class="container container--shadow">
        <div class="row">
          <div class="col gx-0">
            <!-- Desktop Images -->
            <img
              id="desktop-image"
              src="/goodday/why_esport-80.jpg"
              alt="Benefits of Esports"
              class="d-none d-md-block img-fluid"
            />
            <!-- Mobile Images -->
            <img
              id="mobile-image"
              src="/goodday/why_esport-mobile.jpg"
              alt="Benefits of Esports"
              class="d-md-none img-fluid"
            />
          </div>
        </div>
      </div>
    </section>

    <div class="two-section">
      <div class="container section__bg py-5 container--shadow">
        <section id="journey" class="journey">
          <div class="row pb-4">
            <div class="col gx-0">
              <h2 class="h2__title">
                Sign up as Malaysia's
                <br /><span class="d-inline-block"
                  >1<sup>st</sup> Senior Esports team</span
                > and make history today!
              </h2>
            </div>
          </div>
          <div class="row">
            <div class="col-md-4">
              <div class="card card__whiteblue">
                <div class="card-body">
                  <h5 class="card-title">Call to Entry</h5>
                  <p class="card-text">
                    Ready to set a new record in the Malaysian Book of Records?
                  </p>
                  <p class="card-text">
                    Make history today and submit the form below for yourself,
                    or for someone you know!
                  </p>
                </div>
                <div class="card-footer">
                  <p class="card-text">
                    <b>Date:<br /> 19 FEB &ndash; 8 APR 2024</b>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card card__whiteblue">
                <div class="card-body">
                  <h5 class="card-title">Shortlist</h5>
                  <p class="card-text">
                    All submissions will be filtered and <span
                      class="d-inline-block">10 shortlisted candidates</span
                    > will go through a brief video interview.
                  </p>
                  <p class="card-text">
                    Once shortlisted, our team will be in contact with you via
                    the contact details you have provided.
                  </p>
                </div>
                <div class="card-footer">
                  <p class="card-text">
                    <b>Date:<br /> 9 APR &ndash; 22 APR 2024</b>
                  </p>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card card__whiteblue">
                <div class="card-body">
                  <h5 class="card-title">CHARGE UP & PLAY</h5>
                  <p class="card-text">
                    10 shortlisted candidates will attend on-site and online
                    training to battle it out. After which, only 5 will be
                    selected as Malaysiaâ€™s 1<sup>st</sup> Senior Esports Team.
                  </p>
                </div>
                <div class="card-footer">
                  <p class="card-text">
                    <b>Date:<br /> 29 APR &ndash; 13 MAY 2024</b>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </section>
        <hr class="mt-5" style="color: white; opacity: 0.70;" />

        <section id="register" class="py-5">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-md-4 gx-0">
                <figure class="form-decor" style="pointer-events: none">
                  <img
                    class="form-title"
                    src="/goodday/form-title.png"
                    alt="Make History Today!"
                  />
                  <img
                    class="form-charge"
                    src="/goodday/form-charge.svg"
                    alt="zap!"
                  />
                </figure>
              </div>

              <div class="col-md-8 col-lg-8">
                <GooddayForm />
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>

    <section id="faq" class="section__bg">
      <div class="container container--shadow bg__lightgray">
        <div class="py-5 text-center">
          <h2 class="font__cs h1">Frequently Asked Questions (FAQs)</h2>
        </div>
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <GooddayFaq className="accordion-flush mb-4" />
          </div>
        </div>
        <div class="py-5 text-center">
          <h3 class="font__anton">
            All CHARGED up with questions? Contact us below!
          </h3>
          <p class="h5 font__ssv">
            <b
              >Email: <a
                href="mailto:gooddaychargedgoldensnipers.com"
                target="_blank">boomers2gamers@gooddaycharge.com</a
              ></b
            >
          </p>
          <p class="h5 font__ssv">
            <b
              >WhatsApp: <a
                href="https://wa.me/601154351883?text=Goodday%20Charge%20-%20Boomers2Gamers%20-%20Feel%20free%20to%20drop%20us%20a%20message%20for%20any%20inquiry."
                target="_blank">+6011 5435 1883</a
              ></b
            >
          </p>
        </div>
        <div class="py-5 text-center">
          <h5 class="font__ssv" style="font-size: 20px;">
            IN PARTNERSHIP WITH
          </h5>
          <img src="/goodday/partner-orangeesport.png" alt="Partnership" />
        </div>
      </div>
    </section>
  </main>
</Layout>
