---
import Layout from "../layouts/Layout.astro";

import Placeholder from "../components/Placeholder.astro";

import ColorSample from "../components/ColorSample.astro";
---

<Layout title="frontend | helloworld">
  <main>
    <div class="container">
      <section id="primary-logo">
        <h1>Design Guide Template</h1>
        <p>
          helloworld! Lorem ipsum dolor sit amet consectetur adipisicing elit.
          Recusandae dolores atque repellat praesentium.
        </p>
        <!-- <img src="" alt="Primary Logo" /> -->
        <!-- <Placeholder width="256" height="256" /> -->

        <svg
          width="256"
          height="256"
          viewBox="0 0 100 100"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect
            x="10"
            y="10"
            width="80"
            height="80"
            fill="#6c5ce7"
            rx="23"
            ry="23"></rect>
          <path d="M 25 60 L 40 40 L 55 60 Z" fill="white"></path>
          <path d="M 25 40 L 40 60 L 55 40 Z" fill="white"></path>
          <path d="M 72.5 50 L 87.5 50 L 80 40 L 80 60 Z" fill="white"></path>
        </svg>
      </section>

      <section id="color-palette" style="position:relative">
        <h2>Color Palette</h2>
        <div class="d-flex child--aspect1x1">
          <ColorSample
            width="128"
            height="128"
            style="fill: #131313"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #808185"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #3F3E35"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #E3EDEF"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #D89E5A"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #AEAD9B"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #F7BF03"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #DB382D"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #3C81A7"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #0BD8B6"
            show_copy={true}
          />
          <ColorSample
            width="128"
            height="128"
            style="fill: #f4f3eb"
            show_copy={true}
          />
        </div>
        <div
          id="copyMessage"
          style="display:none; position:absolute; left: 0; top: 0; padding:10px; background-color:lightgrey; border-radius:5px;"
        >
          <span>Text copied to clipboard</span>
        </div>
      </section>

      <section id="elements">
        <h2>Elements</h2>
        <div class="d-flex child--aspect1x1">
          <img
            src="/template-designguide/element-red.svg"
            width="256"
            height="256"
          />
          <img
            src="/template-designguide/element-yellow.svg"
            width="256"
            height="256"
          />
          <img
            src="/template-designguide/element-blue.svg"
            width="256"
            height="256"
          />
          <img
            src="/template-designguide/element-green.svg"
            width="256"
            height="256"
          />
          <!-- <Placeholder width="256" height="256" />
          <Placeholder width="256" height="256" />
          <Placeholder width="256" height="256" /> -->
        </div>
      </section>

      <section id="alternate-logo">
        <h2>Alternate Logo</h2>
        <!-- <img src="" alt="Alternate Logo #1" /> -->
        <!-- <img src="" alt="Alternate Logo #2" /> -->
        <div class="d-flex">
          <img
            src="/template-designguide/element-blue.svg"
            width="256"
            height="256"
          />
          <!-- <Placeholder width="256" height="256" />
          <Placeholder width="256" height="256" /> -->
        </div>
      </section>

      <section id="alternate-logo" style="background: #AEAD9B">
        <h2>Fonts</h2>

        <div class="d-flex">
          <div class="col">
            <h3>Source Serif Pro</h3>
            <p class="text-uppercase">
              abcdefghijklmno
              <br />pqrstuvwxyz
            </p>
            <p>
              abcdefghijklmno
              <br />pqrstuvwxyz
            </p>
          </div>
          <div class="col">
            <h3>Roboto Bold</h3>
            <p class="text-uppercase">
              abcdefghijklmno
              <br />pqrstuvwxyz
            </p>
            <p>
              abcdefghijklmno
              <br />pqrstuvwxyz
            </p>
          </div>
        </div>
      </section>

      <section
        id="divider"
        style="aspect-ratio: 3/1; position: relative; padding-block: 80px;"
      >
        <div class="custom-shape-divider-top-1705976263">
          <svg
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
          >
            <path d="M1200 0L0 0 892.25 114.72 1200 0z" class="shape-fill"
            ></path>
          </svg>
        </div>
        <style>
          .custom-shape-divider-top-1705976263 {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
          }
          .custom-shape-divider-top-1705976263 svg {
            position: relative;
            display: block;
            width: calc(100% + 10%);
            /* height: 73px; */
            height: calc(1rem * pow(1.618, 2));
          }
          .custom-shape-divider-top-1705976263 .shape-fill {
            /* fill: var(--shapedividerfill, #AEAD9B); */
            fill: #aead9b;
          }
        </style>
        <h2>This is a divider section!</h2>
        <a href="https://www.shapedivider.app/" target="_blank"
          >ShapedDivider.app</a
        >
        <!-- bottom -->
        <div class="custom-shape-divider-bottom-1705976468">
          <svg
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
          >
            <path d="M1200 0L0 0 892.25 114.72 1200 0z" class="shape-fill"
            ></path>
          </svg>
        </div>
        <style>
          :root {
            --shapedividerfill: #fff;
          }
          .custom-shape-divider-bottom-1705976468 {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            overflow: hidden;
            line-height: 0;
            transform: rotate(180deg);
          }
          .custom-shape-divider-bottom-1705976468 svg {
            position: relative;
            display: block;
            width: calc(100% + 10%);
            height: calc(1rem * pow(1.618, 2));
          }
          .custom-shape-divider-bottom-1705976468 .shape-fill {
            fill: var(--shapedividerfill, #ffffff);
          }
        </style>
      </section>

      <section id="showcase">
        <h2>Products / Services / Teams</h2>
        <div class="d-flex child--aspect1x1">
          <img
            src="/template-designguide/element-blue.svg"
            width="512"
            height="512"
          />
          <img
            src="/template-designguide/element-red.svg"
            width="512"
            height="512"
          />
          <!-- <Placeholder width="512" height="512" />
          <Placeholder width="512" height="512" /> -->
        </div>
      </section>

      <footer>
        <p>Designed for: Design Guide Template</p>
      </footer>
    </div>
  </main>
</Layout>

<script></script>
<style is:global>
  /* default_styling */
  body {
    margin: 0;
    padding: 0;

    background: #f4f3eb;
  }
  main {
    text-align: center;
  }
  .container {
    max-width: 800px;
    width: 100%;
    margin: auto;

    background: #fff;

    filter: drop-shadow(10px 10px 30px #aead9b);
  }
  .d-flex {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-block: 1.618rem;
  }
  .child--aspect1x1 > * {
    aspect-ratio: 1 /1;
    height: auto;
  }
  .text-uppercase {
    text-transform: uppercase;
  }

  section {
    padding-block: 0.618rem;
    padding-inline: 1rem;

    &:nth-child(even) {
      background: #f4f3eb;
    }
  }
  footer {
    background: #131313;
    color: #f4f3eb;
    padding-block: 0.618rem;
    padding-inline: 1rem;
  }
  h1,
  h2 {
    letter-spacing: 2px;
  }
  button.copy_color {
    font-size: 0.725rem;
  }

  /* theme_styling */
</style>
