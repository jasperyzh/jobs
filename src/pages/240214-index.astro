<script>
  // toggle images for section 5
  const benefit_desktop = document.getElementById("desktop-image");
  const benefit_mobile = document.getElementById("mobile-image");

  if (benefit_desktop) {
    benefit_desktop.addEventListener("click", function () {
      this.src = this.src.includes("/goodday/why_esport-80.jpg")
        ? "/goodday/why_esport-on-80.jpg"
        : "/goodday/why_esport-80.jpg";
    });
  }

  if (benefit_mobile) {
    benefit_mobile.addEventListener("click", function () {
      this.src = this.src.includes("/goodday/why_esport-80.jpg")
        ? "/goodday/why_esport-on-80.jpg"
        : "/goodday/why_esport-80.jpg";
    });
  }
</script>

