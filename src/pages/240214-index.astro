  :root {
    --yellow: #fac100;
    --lightgray: #d4d4d4;
    --brown: #4f2d21;
    --orange: #ff5716;
    --lightorange: #ff8b26;
    --lightblue: #57addc;
  }

  h1,
  h2,
  h3,
  .h1,
  .h2,
  .h3 {
    font-family: "Anton", sans-serif;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  .font__cs {
    font-family: "CS Regular", sans-serif;
  }
  main > section {
    background: var(--yellow);
  }
  .hero--aspect {
    background: rgba(255, 0, 0, 0.5);
    aspect-ratio: 1/1;
    display: flex;
    align-items: center;

    @media screen and (min-width: 425px) {
      aspect-ratio: 4/3;
    }

    @media screen and (min-width: 992px) {
      aspect-ratio: 16/9;
    }
  }

  .container--shadow {
    filter: drop-shadow(1rem 1rem 1rem rgba(0, 0, 0, 0.2));
  }

  .row__findoutmore {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
  }

  .section__bg {
    background: linear-gradient(143deg, var(--orange) 0%, var(--yellow) 100%);
  }

  .bg__lightgray {
    background: var(--lightgray);
  }

  .card__whiteblue {
    /* background: linear-gradient(143deg, #f99c02 0%, var(--yellow) 100%); */
    background: white;
    border: 5px solid var(--lightblue);
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    margin-bottom: 1rem;

    & h5.card-title {
      padding: 1rem 0;
      font-family: "CS Regular", sans-serif;
      font-size: 1.5rem;
      text-transform: uppercase;
    }
